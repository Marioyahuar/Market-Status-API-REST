<html>
  <head>
    <script>
      function fetchOrderbook(pair) {
        fetch(`/orderbook/${pair}`)
          .then(response => response.text())
          .then(data => {
            document.getElementById("orderbook-response").innerHTML = data;
          })
          .catch(error => {
            console.error(error);
          });
      }
      
      function fetchMarketDepth(pair, type, amount, limit) {
        fetch(`/market-depth/${pair}/${type}/${amount}/${limit}`)
          .then(response => response.text())
          .then(data => {
            document.getElementById("market-depth-response").innerHTML = data;
          })
          .catch(error => {
            console.error(error);
          });
      }
    </script>
  </head>
  <body>
    <h2>Orderbook</h2>
    <select id="pair-input">
      <option value="BTCUSD">BTC-USD</option>
      <option value="ETHUSD">ETH-USD</option>
    </select>
    <button onclick="fetchOrderbook(document.getElementById('pair-input').value)">Get Orderbook</button>
    <br><br>
    <div id="orderbook-response"></div>
    
    <h2>Market Depth</h2>
    <select id="pair-input-depth">
      <option value="BTCUSD">BTC-USD</option>
      <option value="ETHUSD">ETH-USD</option>
    </select>
    <input type="text" id="type-input" placeholder="Enter type (buy/sell)">
    <input type="text" id="amount-input" placeholder="Enter amount">
    <input type="text" id="limit-input" placeholder="Enter price limit">
    <button onclick="fetchMarketDepth(document.getElementById('pair-input-depth').value, document.getElementById('type-input').value, document.getElementById('amount-input').value, document.getElementById('limit-input').value)">Get Market Depth</button>
    <br><br>
    <div id="market-depth-response"></div>
  </body>
</html>
